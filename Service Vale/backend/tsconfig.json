{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts",
    "index.ts",
    "db/**/*.ts",
    "controllers/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
